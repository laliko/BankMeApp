<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/imHeader"
    android:layout_width="match_parent"
    android:layout_height="45dp" />

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="243dp"
        android:layout_height="88dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/karla"
        android:text="Sign in to your Account"
        android:textColor="@color/blue"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imHeader"
         />
    <TextView
        android:id="@+id/tvloginto"
        android:layout_width="293dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:fontFamily="@font/karla"
        android:textSize="15dp"
        android:textColor="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@+id/tvSignIn"
        android:text="Log into your BankMe account"
        />
    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="101dp"
        android:layout_height="20dp"
        android:text="Phone number"
        app:layout_constraintTop_toBottomOf="@id/tvloginto"
        android:layout_marginTop="70dp"
        tools:layout_editor_absoluteX="16dp"
        android:fontFamily="@font/karla"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="382dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_background"
        android:hint=" +995123456"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNum"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvpassword"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/etPhoneNumber"
        android:layout_marginTop="18dp"
        tools:layout_editor_absoluteX="16dp"
        android:fontFamily="@font/karla"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="382dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_background"
        android:hint="*****"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvpassword"
        tools:layout_editor_absoluteX="16dp" />
    <Button
        android:id="@+id/btn_login"
        android:text="LOG IN"

        android:layout_width="382dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/etpassword"
        android:layout_marginTop="234dp"
        tools:layout_editor_absoluteX="16dp"
        android:background="@drawable/button_background"
        />


</androidx.constraintlayout.widget.ConstraintLayout>





